@model webodev1.Models.Urun
@{
    ViewData["Title"] = "Ürün Ekle";
}

<h2>Ürün Ekle</h2>

<form asp-action="UrunEkle" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fiyat"></label>
        <input asp-for="Fiyat" class="form-control" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StokDurumu"></label>
        <select asp-for="StokDurumu" class="form-control"
                asp-items="Html.GetEnumSelectList<webodev1.Models.StokDurumu>()">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="StokDurumu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ürünü Kaydet</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}