@model Ogrenci

<h2>Öğrenci Sil</h2>

<div>
    <h4>Öğrenci</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>
        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>
        <dt class="col-sm-2">Okul Numarası</dt>
        <dd class="col-sm-10">@Model.OkulNumarasi</dd>
        <dt class="col-sm-2">Devamsızlık Durumu</dt>
        <dd class="col-sm-10">@Model.DevamsizlikTuru</dd>
    </dl>

    <h4>Bu öğrenciyi silmek istediğinize emin misiniz?</h4>

    <form asp-action="Sil" method="post">
        <input type="hidden" asp-for="OkulNumarasi" />
        <div class="form-group">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>