@{
    ViewData["Title"] = "Ekle";
}
@model Ogrenci
@using veriatl.Models
<h2>Öğrenci Güncelle</h2>
<form asp-action="OgrenciGuncelle">
    <div class="form-group">
        <label asp-for="Numara" class="control-label"></label>
        <input asp-for="Numara" class="form-control" />
        <span asp-validation-for="Numara" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Soyad" class="control-label"></label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="devamdurumu" class="control-label"></label>
        <select asp-for="devamdurumu" asp-items="Html.GetEnumSelectList<Devamsizlikturu>()"
            class="form-control"></select>
        <span asp-validation-for="devamdurumu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
    </div>
</form>