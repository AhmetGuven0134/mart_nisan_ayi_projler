@{
    ViewData["Title"] = "Ekle";
}
@model Ogrenci
@using veri1.Models
<h2>Öğrenci Ekle</h2>
<form asp-action="Ekle">
    <div class="form-group">
    <label asp-for="Numara" class="control-labal"></label>
    <input asp-for="Numara" class="form-control"/>
    <span asp-validation-for="Numara" class="text-danger"></span>
    </div>

    <div class="form-group">
    <label asp-for="Ad" class="control-labal"></label>
    <input asp-for="Ad" class="form-control"/>
    <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

     <div class="form-group"></div>
    <label asp-for="Soyad" class="control-labal"></label>
    <input asp-for="Soyad" class="form-control"/>
    <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <div class="form-group"></div>
    <label asp-for="devamdurumu" class="control-labal"></label>
    <select asp-for="devamdurumu" asp-items="Html.GetEnumSelectList<Devamsizlikturu>()" class="form-control"></select>
    <span asp-validation-for="devamdurumu" class="text-danger"></span>
    </div>
</form>